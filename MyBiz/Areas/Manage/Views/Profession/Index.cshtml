@model List<Profession>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <a asp-action="create" class="btn btn-primary">Create</a>
        </div>
        <div class="col-md-10 mx-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Actions</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (Profession prof in Model)
                    {

                        <tr>
                            <th scope="row">1</th>
                            <td>@prof.Name</td>

                            <td>
                                <a asp-action="edit" asp-route-id="@prof.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="delete" asp-route-id="@prof.Id" class="btn btn-danger sweet-delete">Sweet delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

